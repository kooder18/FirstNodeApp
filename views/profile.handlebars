<div class ="gt-content gt-clear">
  <div class="gt-squeeze added-padding">
    <div class="gt-box-wrap">
    <div class ="rounded button-left">
{{#if success}}
<p>{{success}}</p>
{{/if}}
<img src="{{user.profile_picture}}" alt="an image of a circle">

  </div>
  <div class ="button-left button-margin-left">
<form method = "post">
  <input type ="text" placeholder="username" name = "username" class="gt-input-form" value = "{{user.username}}" ="gt-input-form">
  <input type ="text" placeholder="Name" name = "full_name" class="gt-input-form" value = "{{user.full_name}}" ="gt-input-form">
  <input type ="text" placeholder="Website" name = "website" class="gt-input-form" value = "{{user.website}}">
  <input type ="text" placeholder="Bio" name = "bio" class="gt-input-form bio-box" value ="{{user.bio}}">
  <button class ="btn" type ="submit">Submit</button>
</form>

  </div>
  </div>
</div>
</div>
